@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditHeading</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("EditHeading", "Heading", FormMethod.Post))
        {
        <div class="form-group">
            @Html.Label("Başlık ID:")
            @Html.TextBoxFor(x => x.HeadingID)
            <br />
            @Html.Label("Başlık:")
            @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.HeadingName)
            <br />
            @Html.Label("Kategori ID:")
            @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
            <br />
            @Html.Label("Yazar ID:")
            @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.vlw, new { @class = "form-control" })
            <br />
            <button class="btn btn-success">Güncelle</button>
        </div>
        }
    </div>
</body>
</html>